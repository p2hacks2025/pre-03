{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "node": "22.16.0",
      "pnpm": "10.12.1"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "env": {
        "API_REMOTE_URL": "https://noval-api.fnova.workers.dev",
        "ENVIRONMENT": "staging",
        "LOG_LEVEL": "debug"
      }
    },
    "production": {
      "extends": "base",
      "autoIncrement": true,
      "env": {
        "API_REMOTE_URL": "https://noval-api.fnova.workers.dev",
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "info"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
