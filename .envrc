# DB操作コマンド(db:migrate, db:seed等)で必要な環境変数のみ読み込む
if [ -f apps/api/.env ]; then
  export DATABASE_URL=$(grep -E '^DATABASE_URL=' apps/api/.env | cut -d= -f2-)
  export SUPABASE_URL=$(grep -E '^SUPABASE_URL=' apps/api/.env | cut -d= -f2-)
  export SUPABASE_SERVICE_ROLE_KEY=$(grep -E '^SUPABASE_SERVICE_ROLE_KEY=' apps/api/.env | cut -d= -f2-)
fi
